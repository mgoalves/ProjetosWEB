<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="PedidoPU" transaction-type="RESOURCE_LOCAL">
		<!-- <provider>org.hibernate.ejb.HibernatePersistenceProvider</provider> -->
		<class>br.inf.ufg.pedidovenda.model.Usuario</class>
		<class>br.inf.ufg.pedidovenda.model.cliente.Cliente</class>
		<class>br.inf.ufg.pedidovenda.model.cliente.Endereco</class>
		<class>br.inf.ufg.pedidovenda.model.pedido.EnderecoEntrega</class>
		<class>br.inf.ufg.pedidovenda.model.pedido.Pedido</class>
		<class>br.inf.ufg.pedidovenda.model.produto.Categoria</class>
		<class>br.inf.ufg.pedidovenda.model.produto.Grupo</class>
		<class>br.inf.ufg.pedidovenda.model.produto.Produto</class>
		<class>br.inf.ufg.pedidovenda.model.pedido.ItemPedido</class>
		<!--  <class>br.inf.ufg.pedidovenda.controller.CadastroProdutoBean</class> -->
		
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/pedido_venda?useUnicode=true&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="javax.persistence.jdbc.password" value="123456" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />

			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
		</properties>
	</persistence-unit>

</persistence>